/* pages/feedback/feedback.wxss */
.wxyg_feedback {
  height: 100vh;
  background-color: #eeeeee;
}

.fb_main {
  padding: 20rpx;
  color: #666;
}

.fb_tips {
  display: flex;
  flex-wrap: wrap;
}

.fb_tips text {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}

.fb_content {
  background-color: #fff;
  margin-top: 20rpx;
}

.fb_content textarea {
  padding: 10rpx;
}

.fb_tool {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 30rpx;
}

.fb_tool button {
  width: 90rpx;
  height: 90rpx;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  color: #ccc;
}

.form_btn_wrap {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.form_btn_wrap button {
  width: 30%;
  margin: 0;
}