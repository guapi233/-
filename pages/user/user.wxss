/* pages/user/user.wxss */
page {
  background-color: #edece8;
}

.user_info_wrap {
  height: 45vh;
}

.user_bg {
  height: 45vh;
  filter: blur(10rpx);
}

.user_img_wrap {
  position: relative;
}

.user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}

.user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.user_name {
  margin-top: 40rpx;
  font-size: 35rpx;
}

.user_content {
  position: relative;
}

.user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
  color: #666;
  padding-bottom: 100rpx;
}

.history_wrap {
  background-color: #fff;
  display: flex;
}

.history_wrap navigator {
  flex: 1;
  text-align: center;
}

.his_num {
  color: var(--themeColor);
}

.orders_wrap {
  background-color: #fff;
  margin-top: 30rpx;
}

.order_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.order_content {
  display: flex;
}

.order_content navigator {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
}

.order_iconfont {
  color: var(--themeColor);
  font-size: 40rpx;
}

.address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}

.app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}

.app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.app_info_contact {
  display: flex;
  justify-content: space-between;
}

.recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx;
}